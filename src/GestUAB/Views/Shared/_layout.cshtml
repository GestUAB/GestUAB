<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>GestUAB - Sistema de Gestão UAB - NEAD/Unicentro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href='@Url.Content("~/Content/css/bootstrap.css")' rel="stylesheet">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
    <link href='@Url.Content("~/Content/css/bootstrap-responsive.css")' rel="stylesheet">
    <link href='@Url.Content("~/Content/css/base.css")' rel="stylesheet"> 
    @RenderSection("Styles", required: false)
    
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="http://twitter.github.com/bootstrap/assets/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="http://twitter.github.com/bootstrap/assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="http://twitter.github.com/bootstrap/assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="http://twitter.github.com/bootstrap/assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="http://twitter.github.com/bootstrap/assets/ico/apple-touch-icon-57-precomposed.png">
  </head>

  <body>
    @RenderSection("HomeHeader", required: false)

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href='@Url.Content("~/")'>GestUAB</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
                <li class="active"><a href='@Url.Content("~/")'>Página inicial</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cadastros <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href='@Url.Content("~/colaboradores")'>Colaboradores</a></li>
                        <li><a href='@Url.Content("~/setores")'>Setores</a></li>
                        <li><a href='@Url.Content("~/cursos")'>Cursos</a></li>
                    </ul>
                </li>
                <li><a href="#sobre">Sobre</a></li>
                <li><a href="#contato">Contato</a></li>
            </ul>
            <ul class="nav pull-right">
                <li class="dropdown">
                    @if(@Html.RenderContext.Context.CurrentUser == null){
                    <a class="dropdown-toggle" href="#" data-toggle="dropdown">Entrar <strong class="caret"></strong></a>
                    <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
                        <!-- Login form here -->
                        <form method="POST" action='@Url.Content("~/login")'>
                            Usuário <input type="text" name="UserName" /> <br />
                            Senha <input type="password" name="Password"  /><br />
                            <input name="RememberMe" type="checkbox" value="True" /><br />
                            <label class="string optional" for="RememberMe">Lembrar senha</label>
                            <input class="btn btn-primary" name="SignIn" type="submit" value="Entrar" />
                        </form>
                    </div>
                    }
                    else {
                        <a class="dropdown-toggle" href="#" data-toggle="dropdown">Bem vindo @Html.RenderContext.Context.CurrentUser.UserName <strong class="caret"></strong></a>
                        <ul class="dropdown-menu">
                            <li><a href='@Url.Content("~/users/" + Html.RenderContext.Context.CurrentUser.UserName)'>Conta</a></li> 
                            <li class="divider"></li>
                            <li><a href='@Url.Content("~/logout")'>Sair</a></li>
                        </ul>
                    }
              </li>                
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">

      @RenderBody()

      <hr>

      <footer>
        <p>&copy; Company 2013</p>
      </footer>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script type="text/javascript" src='@Url.Content("~/Content/js/jquery-2.0.2.min.js")'></script>
    <script src='@Url.Content("~/Content/js/bootstrap.min.js")'></script>
    <script src='@Url.Content("~/Content/js/base.js")'></script>
    @RenderSection("JavaScript", required: false)
  </body>
</html>
