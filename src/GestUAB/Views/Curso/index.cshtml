@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Lista de cursos";
}
@section JavaScript
{
    <script src='@Url.Content("~/Content/js/crud.js")'></script>

} 
        
<table class='table'>
  <thead>
    <td>Nome</td>
    <td>Tipo do curso</td>
    <td>Ações</td>
  </thead>
  <tbody>
    @foreach(var curso in @Model) {
        <tr>
            <td>@curso.Nome</td> 
			<td>@curso.TipoCurso</td>
            <td>
				<a href='@Url.Content("~/cursos/" + curso.Id)' class='btn'>
				  Exibir
				</a> 
				<a href='@Url.Content("~/cursos/edit/" + curso.Id)' class='btn btn-info'>
				  <i class="icon-edit"></i>
				  Editar
				</a>
				<a href='@Url.Content("~/cursos/delete/" + curso.Id)' class='btn-delete btn btn-danger'>
				  <i class="icon-remove"></i>
				  Remover
				</a>
            </td>
        </tr>
    }
  </tbody>
</table>



<div class='form-actions fixed'>

  <a href="#" class="btn" onclick="history.go(-1);return false;">
    <i class="icon-arrow-left"></i> Voltar
  </a>
  <a href='@Url.Content("~/cursos/new")' class='btn btn-info'>
    <i class="icon-plus"></i> Cadastrar novo
  </a>
  
</div>


