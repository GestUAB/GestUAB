@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Lista de motorista";
}
@section JavaScript
{
    <script src='@Url.Content("~/Content/js/crud.js")'></script>

} 
        
<table class='table'>
  <thead>
    <td>Nome</td>
    <td>CPF</td>
	<td>Telefone fixo</td>
	<td>Telefone Celular</td>
	<td>Local de trabalho</td>
	<td>Turno</td>
    <td>Ações</td>
  </thead>
  <tbody>
    @foreach(var driver in @Model) {
        <tr>
            <td>@driver.Name</td> 
			<td>@driver.Cpf</td>
			<td>@driver.Phone</td>
			<td>@driver.CellPhone</td>
			<td>@driver.Workplace</td>
			<td>@driver.Rotation</td> 
            <td>
				<a href='@Url.Content("~/drivers/" + driver.Id)' class='btn'>
				  Exibir
				</a> 
				<a href='@Url.Content("~/drivers/edit/" + driver.Id)' class='btn btn-info'>
				  <i class="icon-edit"></i>
				  Editar
				</a>
				<a href='@Url.Content("~/drivers/delete/" + driver.Id)' class='delete btn btn-danger'>
				  <i class="icon-remove"></i>
				  Remover
				</a>
            </td>
        </tr>
    }
  </tbody>
</table>



<div class="row-fluid">

  <a href="#" class="btn" onclick="history.go(-1);return false;">
    <i class="icon-arrow-left"></i> Voltar
  </a>
  <a href='@Url.Content("~/drivers/new")' class='btn btn-info'>
    <i class="icon-plus"></i> Cadastrar novo
  </a>
  
</div>


