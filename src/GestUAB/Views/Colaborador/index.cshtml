@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Lista de colaborador";
}
@section JavaScript
{
    <script src='@Url.Content("~/Content/js/crud.js")'></script>

} 
        
<table class='table'>
  <thead>
    <td>Nome</td>
    <td>CPF</td>
	<td>Telefone fixo</td>
	<td>Telefone Celular</td>
    <td>Ações</td>
  </thead>
  <tbody>
    @foreach(var colaborador in @Model) {
        <tr>
            <td>@colaborador.Nome</td> 
			<td>@colaborador.Cpf</td>
			<td>@colaborador.Telefone</td>
			<td>@colaborador.Celular</td>
            <td>
				<a href='@Url.Content("~/colaboradores/" + colaborador.Id)' class='btn'>
				  Exibir
				</a> 
				<a href='@Url.Content("~/colaboradores/edit/" + colaborador.Id)' class='btn btn-info'>
				  <i class="icon-edit"></i>
				  Editar
				</a>
				<a href='@Url.Content("~/colaboradores/delete/" + colaborador.Id + "?ajax=true")' class='btn-delete btn btn-danger'>
				  <i class="icon-remove"></i>
				  Remover
				</a>
            </td>
        </tr>
    }
  </tbody>
</table>



<div class='form-actions fixed'>

  <a href="#" class="btn" onclick="history.go(-1);return false;">
    <i class="icon-arrow-left"></i> Voltar
  </a>
  <a href='@Url.Content("~/colaboradores/new")' class='btn btn-info'>
    <i class="icon-plus"></i> Cadastrar novo
  </a>
  
</div>


