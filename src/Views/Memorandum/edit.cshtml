@using GestUAB
@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Atualizar memorando";
}
@section JavaScript
{
    
    <script src='@Url.Content("~/Content/js/jquery.validate.js")'></script>
    <script src='@Url.Content("~/Content/js/jquery.validate.unobtrusive.js")'></script>
    <script src='@Url.Content("~/Content/js/additional-methods.js")'></script>
    <script src='@Url.Content("~/Content/js/validation.js")'></script>
    <script src='@Url.Content("~/Content/js/crud.js")'></script>
    
}  
<div id="errors"></div>
<form class="form-horizontal" id="new_form" method="post" action='@Url.Content("~/memorandums/edit/" + Model.Id)'>
  
  <fieldset>
    <legend>Atualizar memorando</legend>    
    
    @HtmlTagsExtensions.FieldsFor(Model, FormType.Update) 
  </fieldset>
  <input class="with-datepicker" type="text" size="25""> 
  <div class='form-actions'>
    <a href="@Url.Content("~/memorandums/")" data-message="Sair sem salvar?" class="btn confirm">Cancelar</a>
    <button type="reset" class="btn">Limpar</button>
    <button type="submit" class="btn btn-primary">Salvar</button>
  </div>  

</form>