@using GestUAB
@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Detalhes do memorando";
}

@section JavaScript
{
    <script>
        function remove()
        {
            bootbox.confirm("Deseja mesmo remover?", function(result) {
                if (result) {
                    location.href = '@Url.Content("~/memorandums/delete/" + @Model.Id)';
                }
            });
            
        }
    </script>
    
}  


<div class="page-header">
<h1>Memorando</h1>
</div>

<div class="row-fluid">

    @HtmlTagsExtensions.LabelsFor(@Model)
  
</div>

<div class="row-fluid">

  <a href="#" class="btn" onclick="history.go(-1);return false;">Voltar</a>
  <a href="#" class='btn btn-danger' onclick="remove();">
    <i class="icon-remove"></i> Remover
  </a>
  <a href='@Url.Content("~/memorandums/edit/" + @Model.Id)' class='btn btn-info'>
    <i class="icon-edit"></i> Editar
  </a>
  <a href='@Url.Content("~/memorandums/new")' class='btn btn-info'>
    <i class="icon-plus"></i> Cadastrar novo
  </a>
  
  
  
</div>
