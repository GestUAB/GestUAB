@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Lista de memorandos";
}
@section JavaScript
{
    <script src='@Url.Content("~/Content/js/crud.js")'></script>
    <script>
      $(".confirm").click(function(event) {
            event.preventDefault();
            bootbox.confirm(this.dataset.message, function(result) {
                if (result) {
                    location.href = event.target.href;
                }
            });
        });
        
        $(".back").click(function(event) {
            event.preventDefault();
                location.href = event.target.href;
        });
    </script>
}        
<table class='table'>
  <thead>
    <td>Nome</td>
    <td>Observa√ßao</td>
    <td>Destino</td>
    <td>Data de Ida</td>
    <td>Data de Volta</td>
    <td>Conta Bancaria</td>
    <td>Numero do Convenio</td>
    <td>Tipo</td>
  </thead>
  <tbody>
    @foreach(var memorandum in @Model) {
        <tr id=@memorandum.Id> 
            <td>@memorandum.RequesterName</td> 
            <td>@memorandum.Observation</td> 
            <td>@memorandum.Destiny</td> 
            <td>@memorandum.StartDate</td> 
            <td>@memorandum.FinishDate</td> 
            <td>@memorandum.BankAccount</td> 
            <td>@memorandum.CovenantNumber</td> 
            <td>@memorandum.Type</td> 
            <td>   
                <a href='@Url.Content("~/memorandums/" + memorandum.Id)' class='btn'>
                  Exibir
                </a> 
                <a href='@Url.Content("~/memorandums/edit/" + memorandum.Id)' class='btn btn-info'>
                  <i class="icon-edit"></i>
                  Editar
                </a>
                <a href='@Url.Content("~/memorandums/delete/" + memorandum.Id)' class='btn btn-danger confirm' data-message='Deseja mesmo excluir?'>
                  <i class="icon-remove"></i>
                  Remover
                </a>
            </td>
        </tr>
    }
  </tbody>
</table>



<div class="row-fluid">

  <a href="#" class="btn" onclick="history.go(-1);return false;">
    <i class="icon-arrow-left"></i> Voltar
  </a>
  <a href='@Url.Content("~/memorandums/new")' class='btn btn-info'>
    <i class="icon-plus"></i> Cadastrar novo
  </a>
  
</div>


