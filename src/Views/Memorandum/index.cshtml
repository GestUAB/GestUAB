@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Lista de memodandos";
}
@section JavaScript
{
    <script src='@Url.Content("~/Content/js/crud.js")'></script>
}        
<table class='table'>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Observa√ßao</th>
      <th>Destino</th>
      <th>Data de Ida</th>
      <th>Data de Volta</th>
      <th>Conta Bancaria</th>
      <th>Numero do Convenio</th>
      <th>Tipo</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var memorandum in @Model) {
      <tr> 
        <td>@memorandum.RequesterName</td> 
        <td>@memorandum.Observation</td> 
        <td>@memorandum.Destiny</td> 
        <td>@memorandum.StartDate</td> 
        <td>@memorandum.FinishDate</td> 
        <td>@memorandum.BankAccount</td> 
        <td>@memorandum.CovenantNumber</td> 
        <td>@memorandum.Type</td> 
        <td>   
          <a href='@Url.Content("~/memorandums/" + memorandum.Id)' class='btn btn-small'>
            <i class="icon-eye-open"></i>
            Exibir
          </a> 
          <a href='@Url.Content("~/memorandums/edit/" + memorandum.Id)' class='btn btn-info btn-small'>
            <i class="icon-edit"></i>
            Editar
          </a>
          <a href='@Url.Content("~/memorandums/delete/" + memorandum.Id)' class='btn btn-danger delete btn-small' id="remove_button">
            <i class="icon-remove"></i>
            Remover
          </a>
        </td>
        </tr>
    }
  </tbody>
</table>
<div class="row-fluid">
  <a href="#" id="back_button" class="btn">
    <i class="icon-arrow-left"></i> Voltar
  </a>
  <a href='@Url.Content("~/memorandums/new")' class='btn btn-info'>
    <i class="icon-plus"></i> Cadastrar novo
  </a> 
</div>