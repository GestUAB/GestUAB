@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Lista de cursos";
}
        
<table class='table'>
  <thead>
    <td>Número</td>
    <td>Nome</td>
    <td>Ações</td>
  </thead>
  <tbody>
    @foreach(var course in @Model) {
        <tr>
            <td>@course.Number</td> 
            <td>@course.Name</td> 
            <td>   
				<a href='@Url.Content("~/course/" + course.Number)' class='btn'>
				  Exibir
				</a> 
				<a href='@Url.Content("~/courses/edit/" + course.Number)' class='btn btn-info'>
				  <i class="icon-edit"></i>
				  Editar
				</a>
				<a href='@Url.Content("~/courses/delete/" + course.Number)' class='btn btn-danger'>
				  <i class="icon-remove"></i>
				  Remover
				</a>
            </td>
        </tr>
    }
  </tbody>
</table>



<div class="row-fluid">

  <a href="#" class="btn" onclick="history.go(-1);return false;">
    <i class="icon-arrow-left"></i> Voltar
  </a>
  <a href='@Url.Content("~/courses/new")' class='btn btn-info'>
    <i class="icon-plus"></i> Cadastrar novo
  </a>
  
</div>


