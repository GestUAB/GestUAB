@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Lista de desistências";
}
@section JavaScript
{
    <script src='@Url.Content("~/Content/js/crud.js")'></script>

} 
        
<table class='table'>
  <thead>
    <td>Professor</td>
    <td>Data da desistência</td>
	<td>Destino</td>
	<td>Motivo da desistência</td>
    <td>Ações</td>
  </thead>
  <tbody>
    @foreach(var desistence in @Model) {
        <tr>
            <td>@desistence.NameTeacher</td> 
			<td>@desistence.TravelDate</td>
			<td>@desistence.Destiny</td>
			<td>@desistence.ReasonGiveup</td>
            <td>
				<a href='@Url.Content("~/desistences/" + desistence.Id)' class='btn'>
				  Exibir
				</a> 
				<a href='@Url.Content("~/desistences/edit/" + desistence.Id)' class='btn btn-info'>
				  <i class="icon-edit"></i>
				  Editar
				</a>
				<a href='@Url.Content("~/desistences/delete/" + desistence.Id)' class='delete btn btn-danger'>
				  <i class="icon-remove"></i>
				  Remover
				</a>
            </td>
        </tr>
    }
  </tbody>
</table>



<div class="row-fluid">

  <a href="#" class="btn" onclick="history.go(-1);return false;">
    <i class="icon-arrow-left"></i> Voltar
  </a>
  <a href='@Url.Content("~/desistences/new")' class='btn btn-info'>
    <i class="icon-plus"></i> Cadastrar novo
  </a>
  
</div>


