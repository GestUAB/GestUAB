@using GestUAB
@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Detalhes do motorista";
}

<div class="page-header">
<h1>Motorista @Model.Name</h1>
</div>

<div class="row-fluid">

    @HtmlTagsExtensions.LabelsFor(@Model)
  
</div>

<div class="row-fluid">

  <a href="#" class="btn" id="back_button">
    <i class="icon-arrow-left"></i>
    Voltar
  </a>
  <a href='@Url.Content("~/drivers/delete/"+@Model.Id)' class='btn btn-danger' id="remove_button">
    <i class="icon-remove"></i> Remover
  </a>
  <a href='@Url.Content("~/drivers/edit/"+@Model.Id)' class='btn btn-info'>
    <i class="icon-edit"></i> Editar
  </a>
  <a href='@Url.Content("~/drivers/new")' class='btn btn-info'>
    <i class="icon-plus"></i> Cadastrar novo
  </a>
  
</div>
