@using GestUAB 
@{
    Layout = "Shared/_layout.cshtml";
    ViewBag.Title = "Editar usuário " + Model.Username;
}
@section JavaScript
{
    <script src='@Url.Content("~/Content/js/jquery.validate.js")'></script>
    <script src='@Url.Content("~/Content/js/jquery.validate.unobtrusive.js")'></script>
    <script src='@Url.Content("~/Content/js/additional-methods.js")'></script>
    <script src='@Url.Content("~/Content/js/validation.js")'></script>
}  

<div id="errors"></div>
<form class="form-horizontal" id="edit_form" method="POST" 
    action='@Url.Content("~/users/edit/" + Model.Username)'>

  <fieldset>
  
    <legend>Editar usuário @Model.Username</legend>
    
    @HtmlTagsExtensions.FieldsFor(@Model, FormType.Update)
    
  </fieldset>
  
  <div class='form-actions'>
  
    <button type="reset" class="btn" 
        onclick="history.go(-1);return false;">Cancelar</button>
    <button type="reset" class="btn">Desfazer mudanças</button>
    <button type="submit" class="btn btn-primary">Salvar</button>
    
  </div>
  
</form>

